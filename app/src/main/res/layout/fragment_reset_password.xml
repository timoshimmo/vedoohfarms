<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_reset_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="app.android.vedoohfarms.resetpassword.fragment.ResetPasswordActivityFragment">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/find_acct_container"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/password_underline_margin_bottom">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/find_acct_email_container"
            android:gravity="center_vertical">

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/txtEditFindAcct"
                android:textColor="@color/custom_mid_gray"
                android:textSize="@dimen/full_name_text_size"
                android:hint="@string/hint_find_acct"
                android:textColorHint="@color/custom_super_light_gray"
                android:background="@android:color/transparent"
                android:paddingBottom="@dimen/login_form_edit_padding_top_bottom"
                android:paddingTop="@dimen/login_form_edit_padding_top_bottom"
                android:layout_weight="0.9"
                android:paddingEnd="@dimen/edit_left_padding"
                android:paddingRight="@dimen/edit_left_padding"
                android:inputType="textPassword"
                android:fontFamily="sans-serif"
                android:paddingStart="0dp"
                android:paddingLeft="0dp" />

            <ImageButton
                android:layout_width="@dimen/clear_image_size"
                android:layout_height="@dimen/clear_image_size"
                app:srcCompat="@mipmap/clear_edit"
                android:id="@+id/btn_clear_find_acct_email"
                android:background="@android:color/transparent"
                android:visibility="invisible"
                android:scaleType="fitEnd" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/underline_height"
            android:background="@color/custom_super_light_gray"
            android:id="@+id/find_acct_underline" />

    </LinearLayout>

    <TextView
        android:text="@string/find_account_info_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_below="@+id/find_acct_container"
        android:fontFamily="sans-serif"
        android:textSize="@dimen/signup_details_text_size"
        android:textColor="@color/custom_dark_gray"
        android:gravity="center" />

    <Button
        android:text="@string/find_acct_string"
        android:layout_width="match_parent"
        android:id="@+id/btn_find_account"
        android:layout_below="@+id/find_acct_container"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif"
        android:textSize="@dimen/btn_forgotten_text_size"
        android:background="@drawable/button_corners"
        android:layout_height="@dimen/find_acct_height"
        android:visibility="gone" />


</RelativeLayout>
