<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".signups.activity.SignUpActivity"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:id="@+id/signup_coordinator"
    android:background="@android:color/white">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="50dp"
            android:paddingLeft="@dimen/signup_container_padding_left_right"
            android:paddingRight="@dimen/signup_container_padding_left_right"
            android:paddingStart="@dimen/signup_container_padding_left_right"
            android:paddingEnd="@dimen/signup_container_padding_left_right">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/first_name_block"
                android:layout_marginBottom="@dimen/txt_email_margin_bottom">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/txtFirstName"
                    android:textColor="@color/custom_mid_gray"
                    android:textSize="@dimen/full_name_text_size"
                    android:hint="@string/hint_first_name"
                    android:textColorHint="@color/custom_super_light_gray"
                    android:background="@android:color/transparent"
                    android:paddingBottom="@dimen/login_form_edit_padding_top_bottom"
                    android:paddingTop="@dimen/login_form_edit_padding_top_bottom"
                    android:paddingLeft="@dimen/edit_left_padding"
                    android:paddingStart="@dimen/edit_left_padding"
                    android:paddingRight="@dimen/edit_left_padding"
                    android:paddingEnd="@dimen/edit_left_padding"
                    android:fontFamily="sans-serif-light"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/underline_height"
                    android:background="@color/custom_super_light_gray"
                    android:id="@+id/first_name_underline" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/last_name_block"
                android:layout_marginBottom="@dimen/txt_email_margin_bottom">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/txtLastName"
                    android:textColor="@color/custom_mid_gray"
                    android:textColorHint="@color/custom_super_light_gray"
                    android:hint="@string/hint_last_name"
                    android:background="@android:color/transparent"
                    android:paddingBottom="@dimen/login_form_edit_padding_top_bottom"
                    android:paddingTop="@dimen/login_form_edit_padding_top_bottom"
                    android:paddingLeft="@dimen/edit_left_padding"
                    android:paddingStart="@dimen/edit_left_padding"
                    android:paddingRight="@dimen/edit_left_padding"
                    android:paddingEnd="@dimen/edit_left_padding"
                    android:textSize="@dimen/full_name_text_size"
                    android:fontFamily="sans-serif-light"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/underline_height"
                    android:background="@color/custom_super_light_gray"
                    android:id="@+id/last_name_underline" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/email_block"
                android:layout_marginBottom="@dimen/txt_email_margin_bottom">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/txtEditEmail"
                    android:textColor="@color/custom_mid_gray"
                    android:textSize="@dimen/full_name_text_size"
                    android:hint="@string/hint_email"
                    android:textColorHint="@color/custom_super_light_gray"
                    android:background="@android:color/transparent"
                    android:paddingBottom="@dimen/login_form_edit_padding_top_bottom"
                    android:paddingTop="@dimen/login_form_edit_padding_top_bottom"
                    android:paddingLeft="@dimen/edit_left_padding"
                    android:paddingEnd="@dimen/edit_left_padding"
                    android:paddingRight="@dimen/edit_left_padding"
                    android:paddingStart="@dimen/edit_left_padding"
                    android:inputType="textEmailAddress"
                    android:fontFamily="sans-serif-light"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/underline_height"
                    android:background="@color/custom_super_light_gray"
                    android:id="@+id/email_underline" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/mobile_block"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/txt_email_margin_bottom">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/txtEditMobile"
                    android:textColor="@color/custom_mid_gray"
                    android:textSize="@dimen/full_name_text_size"
                    android:hint="@string/hint_mobile"
                    android:textColorHint="@color/custom_super_light_gray"
                    android:background="@android:color/transparent"
                    android:paddingBottom="@dimen/login_form_edit_padding_top_bottom"
                    android:paddingTop="@dimen/login_form_edit_padding_top_bottom"
                    android:paddingLeft="@dimen/edit_left_padding"
                    android:paddingRight="@dimen/edit_left_padding"
                    android:paddingStart="@dimen/edit_left_padding"
                    android:paddingEnd="@dimen/edit_left_padding"
                    android:inputType="phone"
                    android:fontFamily="sans-serif-light"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/underline_height"
                    android:background="@color/custom_super_light_gray"
                    android:id="@+id/mobile_underline" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/password_block"
                android:gravity="center_vertical">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/txtEditPassword"
                    android:textColor="@color/custom_mid_gray"
                    android:textSize="@dimen/full_name_text_size"
                    android:hint="@string/hint_password"
                    android:textColorHint="@color/custom_super_light_gray"
                    android:background="@android:color/transparent"
                    android:paddingBottom="@dimen/login_form_edit_padding_top_bottom"
                    android:paddingTop="@dimen/login_form_edit_padding_top_bottom"
                    android:paddingLeft="@dimen/edit_left_padding"
                    android:paddingEnd="@dimen/edit_left_padding"
                    android:paddingRight="@dimen/edit_left_padding"
                    android:paddingStart="@dimen/edit_left_padding"
                    android:inputType="textPassword"
                    android:fontFamily="sans-serif-light"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/underline_height"
                    android:background="@color/custom_super_light_gray"
                    android:id="@+id/password_underline" />

            </LinearLayout>

            <Button
                android:text="@string/string_signup"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_login_height"
                android:id="@+id/btn_complete_signup"
                android:background="@drawable/button_corners"
                android:textSize="@dimen/signup_details_text_size"
                android:textColor="@android:color/white"
                android:fontFamily="sans-serif-light"
                android:layout_marginTop="@dimen/fullname_edit_margin_bottom" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:theme="@style/AppTheme.AppBarOverlay"
        style="@style/AppTheme.PopupOverlay"
        android:id="@+id/signup_appbar"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/signup_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            app:title="@string/string_signup"
            app:layout_collapseMode="pin">

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <!--    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/signup_container"
            app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">

        </FrameLayout>  -->
</android.support.design.widget.CoordinatorLayout>



