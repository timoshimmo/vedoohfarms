<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signups.fragments.FragmentFullName"
    android:id="@+id/frag_fullname"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingEnd="@dimen/signup_container_padding_left_right"
        android:paddingLeft="@dimen/signup_container_padding_left_right"
        android:paddingStart="@dimen/signup_container_padding_left_right"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingRight="@dimen/signup_container_padding_left_right">

        <TextView
            android:id="@+id/signups_email_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/signup_title_margin_top"
            android:fontFamily="sans-serif-medium"
            android:text="@string/fullname_title_string"
            android:textColor="@color/custom_dark_gray"
            android:textSize="@dimen/singup_title_text_size" />

        <TextView
            android:text="@string/fullname_details_string"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signups_email_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/signup_details_margin_top"
            android:id="@+id/email_details"
            android:textSize="@dimen/signup_details_text_size"
            android:textColor="@color/custom_light_gray"
            android:gravity="center_horizontal"
            android:fontFamily="sans-serif"/>

        <LinearLayout
            android:id="@+id/email_address_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/email_details"
            android:layout_marginTop="@dimen/firstname_lastname_margin_bottom"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/first_name_block"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/txtFirstName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:fontFamily="sans-serif-light"
                    android:hint="@string/hint_first_name"
                    android:inputType="textPersonName"
                    android:paddingBottom="@dimen/login_form_edit_padding_top_bottom"
                    android:paddingEnd="@dimen/edit_left_padding"
                    android:paddingLeft="@dimen/edit_left_padding"
                    android:paddingRight="@dimen/edit_left_padding"
                    android:paddingStart="@dimen/edit_left_padding"
                    android:paddingTop="@dimen/login_form_edit_padding_top_bottom"
                    android:textColor="@color/custom_mid_gray"
                    android:textColorHint="@color/custom_super_light_gray"
                    android:textSize="@dimen/full_name_text_size" />

                <View
                    android:id="@+id/first_name_underline"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/underline_height"
                    android:background="@color/custom_super_light_gray" />
            </LinearLayout>

            <View
                android:id="@+id/fullname_separator"
                android:layout_width="@dimen/full_name_separator_width"
                android:layout_height="match_parent"
                android:background="@android:color/transparent" />

            <LinearLayout
                android:id="@+id/last_name_block"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/txtLastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:fontFamily="sans-serif-light"
                    android:hint="@string/hint_last_name"
                    android:inputType="textPersonName"
                    android:paddingBottom="@dimen/login_form_edit_padding_top_bottom"
                    android:paddingEnd="@dimen/edit_left_padding"
                    android:paddingLeft="@dimen/edit_left_padding"
                    android:paddingRight="@dimen/edit_left_padding"
                    android:paddingStart="@dimen/edit_left_padding"
                    android:paddingTop="@dimen/login_form_edit_padding_top_bottom"
                    android:textColor="@color/custom_mid_gray"
                    android:textColorHint="@color/custom_super_light_gray"
                    android:textSize="@dimen/full_name_text_size" />

                <View
                    android:id="@+id/last_name_underline"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/underline_height"
                    android:background="@color/custom_super_light_gray" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/btn_container">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/underline_height"
            android:background="@color/custom_super_light_gray"
            android:id="@+id/btn_container_top_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/btn_login_margin_bottom"
            android:paddingEnd="@dimen/signup_container_padding_left_right"
            android:paddingLeft="@dimen/signup_container_padding_left_right"
            android:paddingRight="@dimen/signup_container_padding_left_right"
            android:paddingStart="@dimen/signup_container_padding_left_right"
            android:paddingTop="@dimen/btn_login_margin_bottom">

            <Button
                android:id="@+id/btn_fullname_next"
                android:layout_width="@dimen/signup_button_width"
                android:layout_height="@dimen/btn_login_height"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/button_corners"
                android:fontFamily="sans-serif"
                android:text="@string/string_next"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="@dimen/signup_details_text_size" />
        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>
