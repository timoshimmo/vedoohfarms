<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragBday"
    tools:context=".signups.fragments.FragmentEmail" >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingEnd="@dimen/signup_container_padding_left_right"
        android:paddingRight="@dimen/signup_container_padding_left_right"
        android:paddingLeft="@dimen/signup_container_padding_left_right"
        android:paddingStart="@dimen/signup_container_padding_left_right">

        <TextView
            android:text="@string/bday_title_string"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/signup_title_margin_top"
            android:id="@+id/signup_bday_title"
            android:textSize="@dimen/singup_title_text_size"
            android:textColor="@color/custom_dark_gray"
            android:fontFamily="sans-serif-medium"/>

        <TextView
            android:text="@string/bday_details_string"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signup_bday_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/signup_details_margin_top"
            android:id="@+id/bday_details"
            android:textSize="@dimen/signup_details_text_size"
            android:textColor="@color/custom_light_gray"
            android:gravity="center_horizontal"
            android:fontFamily="sans-serif"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bday_container"
            android:layout_marginTop="@dimen/firstname_lastname_margin_bottom"
            android:layout_below="@+id/bday_details"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="@dimen/fullname_edit_margin_bottom"
            android:gravity="center_horizontal">

            <DatePicker
                android:layout_width="wrap_content"
                android:id="@+id/datePicker"
                android:calendarViewShown="false"
                android:headerBackground="@color/custom_green"
                android:soundEffectsEnabled="true"
                android:datePickerMode="spinner"
                android:layout_height="@dimen/datepicker_height" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_container"
        android:layout_alignParentBottom="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/underline_height"
            android:background="@color/custom_super_light_gray"
            android:id="@+id/btn_container_top_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/btn_login_margin_bottom"
            android:paddingBottom="@dimen/btn_login_margin_bottom"
            android:paddingRight="@dimen/signup_container_padding_left_right"
            android:paddingEnd="@dimen/signup_container_padding_left_right"
            android:paddingLeft="@dimen/signup_container_padding_left_right"
            android:paddingStart="@dimen/signup_container_padding_left_right">

            <Button
                android:text="@string/string_next"
                android:layout_width="@dimen/signup_button_width"
                android:layout_height="@dimen/btn_login_height"
                android:id="@+id/btn_bday_next"
                android:background="@drawable/button_corners"
                android:textSize="@dimen/signup_details_text_size"
                android:textColor="@android:color/white"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textAllCaps="false"
                android:fontFamily="sans-serif"/>

            </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>

